@model IEnumerable<IdentityDiscussion.Models.Topic>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <h4><strong>Topic Name</strong></h4>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <h5><strong>@item.TopicName</strong></h5>
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Open" asp-route-id="@item.TopicId">Open</a> |
                    <a class="btn btn-outline-secondary" asp-action="Edit" asp-route-id="@item.TopicId">Edit</a> |
                    <a class="btn btn-outline-success" asp-action="" asp-route-id="">Invite</a> |
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.TopicId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
